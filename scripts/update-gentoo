if [ `id -u` -ne 0 ]
then
	echo "Ce script doit être lancé par le superuser"
	exit "1"
fi

if [ -r /etc/conf.d/server-tools ] 
then
	source /etc/conf.d/server-tools
else
	echo "Il faut créer le fichier /etc/conf.d/server-tools"
	exit 1
fi

if [ -z "${MAILING_LIST_REPORT}" ]
then
	echo "Il faut créer le fichier /etc/conf.d/server-tools"
	echo "et le paramétrer correctement"
	echo "Il manque le paramètre 'MAILING_LIST_REPORT'"
	exit 1
fi

source /etc/conf.d/hostname

DATE=`date +'%Y/%m/%d %H:%M'`
( /bin/echo "Serveur : ${HOSTNAME}"
/bin/echo "Date : ${DATE}"
/bin/echo "Operation : Mise à jour des paquets"
/bin/echo "Liste des destinataires : ${MAILING_LIST_REPORT}"
SWITCH_BACK_TO_RO="no"
if [ "`mount | grep /usr | sed 's@.*(.*ro.*)@yes@'`" = "yes" ]
then
	SWITCH_BACK_TO_RO="yes"
	/bin/echo
	/bin/echo -n "Remontage de /usr en mode rw ... "
	/bin/mount -o remount,rw /usr
	if [ $? -ne 0 ]
	then
		/bin/echo "NOT OK [$?]"
		exit 1
	fi
	/bin/echo "OK"
fi
/bin/echo
/bin/echo -n "Mise à jour de l'arbre de portage gentoo ... "
/usr/bin/emerge --quiet sync &> /dev/null
if [ $? -ne 0 ]
then
	/bin/echo "NOT OK [$?]"
	exit 1
else
	/bin/echo "OK"
fi
/bin/echo
/bin/echo -n "Mise à jour des permissions sur l'arbre de portage gentoo ... "
/bin/chmod -R g-s /var/cache/edb
if [ $? -ne 0 ]
then
	/bin/echo "NOT OK [$?]"
	exit 1
else
	/bin/echo "OK"
fi
if [ ! -z "${CUSTOM_RSYNC}" ]
then
	/bin/echo
	/bin/echo -n "Mise à jour de l'arbre de portage custom ... "
	/usr/bin/rsync --recursive ${CUSTOM_RSYNC} /usr/local/portage &> /dev/null
	if [ $? -ne 0 ]
	then
		/bin/echo "NOT OK [$?]"
		exit 1
	else
		/bin/echo "OK"
	fi
fi
if [ "${SWITCH_BACK_TO_RO}" = "yes" ]
then
	/bin/echo
	/bin/echo -n "Remontage de /usr en mode ro ... "
	/bin/mount -o remount,ro /usr
	if [ $? -ne 0 ]
	then
		/bin/echo "NOT OK [$?]"
		exit 1
	else
		/bin/echo "OK"
	fi
fi
/bin/echo
/bin/echo "Voici les paquets qu'il faudrait mettre à jour : "
/bin/echo
/usr/bin/emerge -pDuv --quiet world 2> /dev/null | grep ebuild
/bin/echo
) | /bin/mail -s "[IT] ${HOSTNAME} - ${DATE} - UPDATE" "${MAILING_LIST_REPORT}"
