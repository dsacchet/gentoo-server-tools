# Liste des destinataires des mails récaputilatifs
MAILING_LIST_REPORT="'Prenom Nom' <user@domain.com>"

# Liste des destinataires des mails d'alerte
MAILING_LIST_ALERT="'Prenom Nom' <user@domain.com>"

# Pourcentage de l'espace disque au dessus duquel une erreur est générée
MINIMUM_SPACE=95

# Fichier de log pour le emerge world
EMERGE_WORLD_LOG=/root/emerge-world.log

# Serveur rsync pour l'arbre de portage custom
CUSTOM_RSYNC=rsync://<ip or hostname>/gentoo

# Nombre de jours au delà duquel il faut supprimer les fichiers
CLEANING_DAYS_LIMIT=1

# LOG FILE FOR LOGIN/LOGOUT
AUTH_LOG_FILE=/var/standard/auth/info.log
